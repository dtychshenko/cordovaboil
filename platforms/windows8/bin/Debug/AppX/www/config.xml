<?xml version='1.0' encoding='utf-8'?>
<widget id="com.infusion.boil" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Cordova Boilerplate</name>
    <description>
        A sample Single-page Durandal Application wrapped in Apache Cordova.
    </description>
    <author email="toronto@infusion.com" href="http://infusion.com">
        Infusion Inc
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="orientation" value="portrait" />
    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="ios-statusbarstyle" value="black-translucent" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
</widget>
